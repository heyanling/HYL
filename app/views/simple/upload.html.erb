          <form role="form">
            <div class="form-group">
              <label class="control-label">标题</label>
              <input name="title1" id="title1" class="form-control" type="text">
            </div>
            <div class="form-group">
              <label class="control-label">图文</label>
              <textarea name="content1" id="content1" cols="20" rows="10" class="form-control"></textarea>
            </div>
            <div class="form-group">
              <label for="file1">File input</label>
